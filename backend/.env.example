# ========================================
# MI-PYME Environment Variables Template
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control

# ========================================
# DJANGO CORE SETTINGS
# ========================================

# REQUIRED: Django secret key (generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
DJANGO_SECRET_KEY=CHANGE_ME_TO_RANDOM_50_CHARS

# Environment: core.settings.dev | core.settings.prod | core.settings.desktop
DJANGO_SETTINGS_MODULE=core.settings.dev

# Debug mode (NEVER set to True in production)
DJANGO_DEBUG=True

# Allowed hosts (comma-separated, required in production)
# Example: mipyme.example.com,www.mipyme.example.com
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ========================================
# DATABASE CONFIGURATION
# ========================================

# For PRODUCTION (PostgreSQL with dj-database-url):
# DATABASE_URL=postgresql://user:password@host:5432/dbname
DATABASE_URL=

# Or use individual PostgreSQL settings:
POSTGRES_DB=mipyme_db
POSTGRES_USER=mipyme_user
POSTGRES_PASSWORD=
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432

# For DESKTOP (PostgreSQL portable):
# POSTGRES_PORT=5433
# POSTGRES_DB=mipyme
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=

# ========================================
# CORS & CSRF CONFIGURATION
# ========================================

# Allowed origins for CORS (comma-separated)
# DEV example: http://localhost:5173,http://localhost:5174
# PROD example: https://mipyme.example.com,https://www.mipyme.example.com
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# ========================================
# SECURITY SETTINGS (PRODUCTION)
# ========================================

# Force HTTPS redirect (set to False for development/desktop)
SECURE_SSL_REDIRECT=False

# ========================================
# EMAIL CONFIGURATION
# ========================================

# SMTP settings (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=MI-PYME <noreply@mipyme.com>

# ========================================
# REDIS CACHE (OPTIONAL - for production)
# ========================================

# Redis URL for caching and Celery
# Example: redis://localhost:6379/0
REDIS_URL=

# ========================================
# LOGGING
# ========================================

# Log level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# ========================================
# FIELD ENCRYPTION
# ========================================

# Fernet key for encrypting sensitive fields (AFIP certs, CBU, etc.)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=

# ========================================
# DESKTOP APP SETTINGS (Electron only)
# ========================================

# Desktop user data path (set by Electron)
DESKTOP_USER_DATA_PATH=
DESKTOP_LOG_PATH=

# ========================================
# EXTERNAL INTEGRATIONS
# ========================================

# AFIP (Argentina tax system integration)
AFIP_CUIT=
AFIP_CERT_PATH=
AFIP_KEY_PATH=
AFIP_PRODUCTION=False

# ========================================
# MONITORING & ERROR TRACKING (OPTIONAL)
# ========================================

# Sentry DSN for error tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
