# ========================================
# CONFIGURACIÓN DE SEGURIDAD - MI-PYME
# ========================================
# IMPORTANTE: Este archivo NO debe contener valores reales
# Copie este archivo a .env y configure valores apropiados

# ========================================
# SECRET KEY (OBLIGATORIO)
# ========================================
# Genere una clave secreta única usando:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=CAMBIE_ESTA_CLAVE_POR_UNA_GENERADA_ALEATORIAMENTE

# ========================================
# DEBUG MODE (OBLIGATORIO)
# ========================================
# PRODUCCIÓN: False
# DESARROLLO: True
# Por defecto es False por seguridad
DJANGO_DEBUG=True

# ========================================
# ALLOWED HOSTS (OBLIGATORIO EN PRODUCCIÓN)
# ========================================
# Lista separada por comas de dominios permitidos
# Ejemplo: DJANGO_ALLOWED_HOSTS=example.com,www.example.com,192.168.1.100
# Para desarrollo local puede usar: localhost,127.0.0.1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================
# Para SQLite (desarrollo):
# No requiere configuración adicional

# Para PostgreSQL (producción recomendado):
POSTGRES_DB=mipyme_db
POSTGRES_USER=mipyme_user
POSTGRES_PASSWORD=CAMBIE_ESTE_PASSWORD_SEGURO
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ========================================
# CORS - Orígenes permitidos
# ========================================
# Lista separada por comas de orígenes permitidos para CORS
# Desarrollo: http://localhost:5173,http://localhost:5174
# Producción: https://su-dominio.com
ALLOWED_ORIGIN=http://localhost:5173,http://localhost:5174

# ========================================
# ENCRIPTACIÓN DE DATOS SENSIBLES
# ========================================
# Genere una clave de encriptación usando:
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=GENERE_UNA_CLAVE_FERNET_AQUI

# ========================================
# CONFIGURACIONES HTTPS (PRODUCCIÓN)
# ========================================
# Descomentar en producción con HTTPS configurado
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000

# ========================================
# NOTAS DE SEGURIDAD
# ========================================
# 1. NUNCA commita el archivo .env al repositorio
# 2. Use contraseñas fuertes y únicas
# 3. Cambie todas las claves en producción
# 4. Configure HTTPS en producción
# 5. Mantenga DEBUG=False en producción
# 6. Configure backups regulares de la base de datos
